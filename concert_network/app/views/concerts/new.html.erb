<h1> Add a Concert </h1>
<%= form_for @my_concert do |f| %> <!-- form for method is for models only -->

<div>
	<%= f.label :artist %>
	<%= f.text_field :artist %>
</div>

<div>
	<%= f.label :venue %>
	<%= f.text_field :venue %>
</div>

<div>
	<%= f.label :city %>
	<%= f.text_field :city %>
</div>

<div>
	<%= f.label :date %>
	<%= f.date_field :date %>
</div>

<div>
	<%= f.label :price %>
	<%= f.number_field :price %>
</div>

<div>
	<%= f.label :description %>
	<%= f.text_area :description %>
</div>

	<%= f.button %> or <a href="/concerts">Home Page</a>
<% end %>

